@import (reference) 'reference.less';

.sans-font-1,
.serif-font-1 {
  font-family: "Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","microsoft yahei",sans-serif;
}

// general /////////////////////////////////////////////////////////////////////////
body {
  .sans-font-1;
  background: #f2f2f2;
  color: @text_2;
  -webkit-font-smoothing: antialiased;
}
.outter {
  border: 2px solid #e0e0e0;
  width: 400px;
  margin: 30px auto;
  border-radius: 10px;
  overflow: hidden;
}
.wrap {
  background: #fff;
  border-bottom: 4px solid #ff6600;
  overflow: hidden;
  .header {
    height: 120px;
    background: #ff6600;
    position: relative;
    .avatar {
      border: 3px solid #fff;
      width: 150px;
      height: 150px;
      margin: 0 auto;
      top: 24px;
      border-radius: 150px;
      overflow: hidden;
      position: relative;
    }
  }
  .mail-content {
    margin: 0 28px;
    text-align: center;
    margin-top: 100px;
    padding-bottom: 35px;
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 45px;
    h1 {
      font-size: 30px;
      color: #444;
      margin: 0;
      margin-bottom: 10px;
    }
    .sub {
      font-size: 18px;
      color: #666;
    }
  }
  .info {
    text-align: left;
    margin: 0 28px;
    padding-bottom: 40px;
    ul {
      list-style: none;
      padding: 0;
      li {
        .key {
          font-size: 15px;
          color: #999;
          padding: 0;
          margin-bottom: 5px;
        }
        .value {
          font-size: 18px;
          color: #ff6600;
          margin-bottom: 20px;
        }
      }
    }
  }
}